<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lenviarreporte"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/degradeb"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Datos de la cuenta"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Num. cuenta:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tcodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#B61818"

                />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saldo:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tfecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$$$$$$$" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tdescrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activo" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo cuenta:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ttipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="corriente" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Propietario:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/propietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1154445" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>